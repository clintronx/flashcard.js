{
	"indenting text": {
    	"back": "p {text-indent: 3em;}"
 	},
	"horizontal alignment": {
    	"back": "p {text-align: justify;}"
 	},
	"vertical alignment": {
    	"back": "img {vertical-align: baseline;}"
 	},
	"Height of lines": {
    	"back": "p.one {line-height: 14px; font-size: 13px;}"
 	},
	"word spacing": {
    	"back": "p.spread {word-spacing: 0.5em;}"
 	},
	"letter spacing": {
    	"back": "p {letter-spacing: 0.25em;}"
 	},
	"text transformation": {
    	"back": "h1 {text-transform: capitalize;}"
 	},
	"text decoration": {
    	"back": "p.emph {text-decoration: underline;}"
 	},
	"text shadow": {
    	"back": "p {color: black; text-shadow: 1em 1em gray, -1em -1em silver;}"
 	},
	"white space": {
    	"back": "code {white-space: pre;}"
 	},
	"text direction": {
    	"back": "*:lang(ar), *:lang(he) {direction: rtl;}"
 	}
}